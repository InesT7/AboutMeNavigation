<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded"> 
 
    <GridLayout rows="auto" columns="auto" width="100" height="100" class="menu">
    <StackLayout row="0" col="0" class="line"></StackLayout> 
    <StackLayout row="0" col="0" class="line"></StackLayout> 
    <StackLayout row="0" col="0" class="line"></StackLayout> 
</GridLayout>

    <ActionBar title="Skills" icon="" />
    <StackLayout class="p-4">

   <!-- Content Section -->
        <StackLayout row="1" class="content" verticalAlignment="center" horizontalAlignment="center" marginLeft="10" marginRight="10">
            <ListView id="mySkillsListView" class="list-view">
                <ListView.itemTemplate>
                    <StackLayout orientation="vertical" class="skill-item">
                        <Label class="category" text="{{ category }}" horizontalAlignment="center"/>
                        <Label class="skill" text="{{ skill }}" horizontalAlignment="center"/>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>

       
    </StackLayout>
</Page>
